<Window x:Class="MicroAnalys.ScaleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MicroAnalys"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Выбор полосы масштаба">
    <Grid Margin="0,0,0,50">
        <Image x:Name="imgBox"/>
        <InkCanvas Background="Transparent" x:Name="canvass" EditingMode="Select">
            <Rectangle x:Name="Oleg" Opacity="0.5" Fill="LightBlue" Width="100" Height="50" />
        </InkCanvas>
        <Button Click="Button_Click" HorizontalAlignment="Right" VerticalAlignment="Top" Height="50" Width="200">Готово</Button>
    </Grid>
</Window>
